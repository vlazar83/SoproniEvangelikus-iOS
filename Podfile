# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'SoproniEvangelikus-iOS' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for SoproniEvangelikus-iOS

pod 'Firebase/Auth'
pod 'Firebase/Firestore'
pod 'Firebase/Analytics'
pod 'Firebase/Messaging'
pod 'Firebase/Functions'
pod 'Firebase/Storage'

pod 'FirebaseUI'
pod 'FirebaseUI/Auth'
pod 'FirebaseUI/Google'
pod 'FirebaseUI/Facebook'

# to avoid this error https://github.com/openid/AppAuth-iOS/issues/489
# Xcode update is needed anyway to prevent further issues - switch back to AppAuth 1.3.0 from 1.2.0
pod 'AppAuth', '~> 1.3.0'

end
